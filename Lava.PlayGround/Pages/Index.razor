@page "/"
@using Lava.PlayGround.Data

<h3>🌋 Lava</h3>
<sub>
    A <img src="data:image/png;base64," height="16">
    Blazor based UI component
</sub>

<hr />

<!-- DatePicker -->
<h4><i class="fa fa-caret-right"></i> Date Picker</h4>
<Lava.DatePicker />
<Lava.DatePicker />

<!-- TabControl -->
<h4 class="mt-5"><i class="fa fa-caret-right"></i> Tab Control</h4>
<Lava.TabControl>
    <TabTextTemplate Context="TheTab">
        <i class="fa fa-folder"></i> @TheTab.Text
    </TabTextTemplate>

    <ChildContent>
        <Lava.TabPage Text="Tab 1">
            <h1>The first tab</h1>
        </Lava.TabPage>
        <Lava.TabPage Text="Tab 2">
            <h1>The second tab</h1>
        </Lava.TabPage>
        <Lava.TabPage Text="Tab 3">
            <h1>The third tab</h1>
        </Lava.TabPage>
    </ChildContent>
</Lava.TabControl>

<!-- DataList -->
<h4 class="mt-5"><i class="fa fa-caret-right"></i> DataTable</h4>
<Lava.DataTable Data="@People" />
@code{
    private IEnumerable<Person> People;
    protected override void OnInitialized()
    {
        base.OnInitialized();
        People = new Person[]
        {
          new Person { Salutation = "Mr", GivenName = "Bob", FamilyName = "Geldof" },
          new Person { Salutation = "Mrs", GivenName = "Angela", FamilyName = "Rippon" },
          new Person { Salutation = "Mr", GivenName = "Freddie", FamilyName = "Mercury" }
        };
    }
}