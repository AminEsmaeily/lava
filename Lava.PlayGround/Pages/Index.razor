@page "/"

<h3><img src="/res/logo340.png" height="40" /> Lava</h3>
<sub>
    A <img src="data:image/png;base64," height="16">
    Blazor based UI component
</sub>

<hr />

<!-- AdroitInput -->
<div class="row">
    <div class="col">
        <LavaCollapsible Header="LavaInput">
            <div class="row">
                <div class="col-4">
                    <LavaBaseInput @bind-Value=@textValue/>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <LavaInput @bind-Value=@textValue>
                        <PlaceHolder>
                            It is a simple text
                        </PlaceHolder>
                    </LavaInput>
                </div>
                <div class="col-4">
                    <LavaInput>
                        <PlaceHolder>
                            <div><i class="fas fa-user"></i> Username</div>
                        </PlaceHolder>
                    </LavaInput>
                </div>
                <div class="col-4">
                    <LavaInput IsPassword="true" @bind-Value=@textValue>
                        <PlaceHolder>
                            <div><img src="/res/key.png" /> Password</div>
                        </PlaceHolder>
                    </LavaInput>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <LavaInput @bind-Value=@textValue>
                        <PlaceHolder>
                            <div><img src="/res/chat.png" /> It can be very long placeholder content with a <a href="https://github.com/AminEsmaeily/lava">hyperlink</a></div>
                        </PlaceHolder>
                    </LavaInput>
                </div>
            </div>
        </LavaCollapsible>

        @code{
            private string textValue;
        }
    </div>
</div>

<!-- DatePicker -->
<div class="row">
    <div class="col">
        <LavaCollapsible Header="LavaDatePicker">
            <div class="row">
                <div class="col-6">
                    <LavaDatePicker>
                        <PlaceHolder>
                            Select Date
                        </PlaceHolder>
                    </LavaDatePicker>
                </div>
                <div class="col-6">
                    <LavaDatePicker CountryCode="Nager.Date.CountryCode.IR">
                        <PlaceHolder>
                            <div><img src="/res/birthday.png" /> Shamsi Calendar</div>
                        </PlaceHolder>
                        <Icon>
                            <img src="/res/calendar.png" width="24" height="24" />
                        </Icon>
                    </LavaDatePicker>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <LavaDatePicker CountryCode="Nager.Date.CountryCode.SA">
                        <PlaceHolder>
                            Hijri Calendar (UmAlQura)
                        </PlaceHolder>
                    </LavaDatePicker>
                </div>
                <div class="col-6">
                    <LavaDatePicker CountryCode="Nager.Date.CountryCode.TR">
                        <PlaceHolder>
                            Turkish Calendar
                        </PlaceHolder>
                    </LavaDatePicker>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <LavaDatePicker CountryCode="Nager.Date.CountryCode.DE">
                        <PlaceHolder>
                            German Calendar
                        </PlaceHolder>
                    </LavaDatePicker>
                </div>
                <div class="col-6">
                    <LavaDatePicker CountryCode="Nager.Date.CountryCode.RU">
                        <PlaceHolder>
                            Russian Calendar
                        </PlaceHolder>
                    </LavaDatePicker>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <LavaDatePicker CountryCode="Nager.Date.CountryCode.JP">
                        <PlaceHolder>
                            Japanese Calendar (Heisei era)
                        </PlaceHolder>
                    </LavaDatePicker>
                </div>
                <div class="col-6">
                    <LavaDatePicker CountryCode="Nager.Date.CountryCode.CN">
                        <PlaceHolder>
                            Chinese Lunisolar Calendar
                        </PlaceHolder>
                    </LavaDatePicker>
                </div>
            </div>
        </LavaCollapsible>
    </div>
</div>